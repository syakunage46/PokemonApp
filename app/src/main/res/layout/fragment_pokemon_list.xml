<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".scene.pokemonlist.PokemonListFragment">

    <data>
        <variable
            name="store"
            type="com.example.myapplication.module.pokemonlist.store.PokemonListStore" />
        <variable
            name="controller"
            type="com.example.myapplication.module.pokemonlist.PokemonListController" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/pokemonListFrame"
            layout="@layout/pokemon_list"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:pokemonDataList="@{store.state.pokemonList}"
            app:delegate="@{controller}"
            app:isLoading="@{store.state.isLoading}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>